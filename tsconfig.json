{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./staging/core/",
        "moduleResolution": "node",
        "allowJs": true
    },
    "exclude": [
        "node_modules",
        "staging",
        "js-adapter"
    ]
}
